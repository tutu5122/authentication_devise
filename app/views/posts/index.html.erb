<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.state %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td>
        <% if current_user && current_user.admin? %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <% end %>
        </td>
        <td>
        <% if current_user && current_user.admin? %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
